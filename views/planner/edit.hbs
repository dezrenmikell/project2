<form action="/users/{{userId}}/events/{{eventId}}?_method=PUT" method="POST">
    <div>
        <input type="text" name="name" value="{{event.name}}" />
    </div>
    <div>
        <input type="text" name="content" value="{{event.content}}" />
    </div>
    <button class="btn pink" type="submit">Edit Event</button>
</form>