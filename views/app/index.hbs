{{#if events}}
  <ul class="events">
    {{#each events}}
      <div class="card">
        <div class="card-content">
          <a class="card-title" href="/event/{{id}}">
            {{ content }}
          </a>
        </div>
        <div class="card-action">
          <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
          <span class="event__date">{{ createdAt }}</span>
          <span class="event_reviews">{{ reviews.length }} Comments</span>
        </div>
      </div>
    {{/each}}
  </ul>
  {{else}}
  <h1>There are no events</h1>
{{/if}}