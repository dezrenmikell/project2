<h1>hello from our new user page</h1>

<form action="/users" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" placeholder="name" />
    </div>
    <div>
        <label for="phone">Phone Number</label>
        <input type="text" name="phone" placeholder="Phone number without symbols Ex. 2223334444" />
    </div>
    <div>
        <label for="email">Email</label>
        <input type="text" name="email" placeholder="email address" />
    </div>
    <div>
        <label for="password">Password</label>
        <input type="text" name="password" placeholder="password" />
    </div>

    <div>
        <label for="image">Image</label>
        <input type="text" name="image" placeholder="image link" />
    </div>
    <div>
        <label for="website">Website</label>
        <input type="text" name="website" placeholder="website link" />
    </div>
    <div>
        <label for="typez">User Type</label>
        <input type="text" name="typez" placeholder="planner, personnel, or spectator" />
    </div>
    <button type="submit">Create User</button>
</form>